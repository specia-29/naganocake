<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
          <nav class="nav navbar-nav navbar-left">
            <%= link_to root_path do %>
            <%= image_tag "logo.png" %>
            <% end %>
          </nav>
        </button>

            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
              <li>ようこそ、<%= current_customer.last_name %>さん！</li>
              <li class="nav-item"><%= link_to "マイページ", customers_mypage_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "商品一覧", items_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "カート", cart_item_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default' %></li>

              <% elsif admin_signed_in? %>
              <li class="nav-item"><%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "注文履歴一覧", admin_root_path(@customer.id), class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path(@customer.id), class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default' %></li>

              <% else %>
              <li class="nav-item"><%= link_to "About", about_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "商品一覧", items_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "ログイン", new_customer_session_path, class: 'btn btn-default' %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default' %></li>
              <% end %>
            </ul>


        </div>
      </header>
      <main>
      <%= yield %>
      </main>
    </body>
</html>
