<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
    <header>
          <%= link_to "LOGO", root_path, class: 'nav-link text-dark' %>
            <ul class="navbar-nav ml-auto">

              <% if customer_signed_in? %>
              <li><%= link_to "About", about_path, class: 'btn btn-default' %></li>
              <li><%= link_to "商品一覧", items_path, class: 'btn btn-default' %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: 'btn btn-default' %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default' %></li>

              <% elsif admin_signed_in? %>
              <li><%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %></li>
              <li><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-default' %></li>
              <li><%= link_to "注文履歴一覧", admin_root_path(@customer.id), class: 'btn btn-default' %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path(@customer.id), class: 'btn btn-default' %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default' %></li>

              <% else %>
              <li><%#= link_to "マイページ", mypage_customers_path, class: 'btn btn-success' %></li>
              <li><%#= link_to "商品一覧", items_path, class: 'btn btn-default' %></li>
              <li><%#= link_to "カート", cart_items_path, class: 'btn btn-default' %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default' %></li>
              <% end %>
            </ul>

            <div class="container">
              <div class="row">
                <div class="col-xl-4">
                  <table class="table" >
                    <thead>
                      <tr><th>ジャンル検索</th></tr>
                    </thead>
                    <tbody>
                      <% @genres.each do |genre| %>
                        <tr><td><%= genre.name%></td></tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
    </header>
      <main>
      <%= yield %>
      </main>
    </body>
</html>
