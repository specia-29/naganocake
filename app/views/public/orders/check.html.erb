<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="ml-4 mt-3 mb-2">注文情報確認</h2>
    </div>
      <table class="table col-lg-8">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= cart_item.name %></td>
              <td><%= order.taxin_price %></td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td><%= item.taxin_price * amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table>
        <tr>
          <td class="col-xs-2 table-secondary">送料</td>
          <td>800</td>
        </tr>
        <tr>
          <td class="col-xs-2 table-secondary">商品合計</td>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="col-xs-2 table-secondary">請求金額</td>
          <td><%= @total.round.to_s(:delimited) + shipping_cost %></td>
        </tr>
      </table>

      <div class="payment_method">
        <h3>支払方法</h3>
        <%= @order.payment_method %>
      </div>
      <div class="address">
        <h3>お届け先</h3>
        <%= @order.address %>
      </div>

      <%= f.submit "注文を確定する", class: 'btn btn-success' %>


</div>