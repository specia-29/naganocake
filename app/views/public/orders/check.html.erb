<div class="container">
      <h2 class="ml-4 mt-3 mb-2">注文情報確認</h2>
    </div>

    <div class="d-flex">
      <table class="table table-bordered col-lg-8 mx-auto">
        <thead class="table-secondary">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <% @total += @total + cart_item.subtotal %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table table-bordered col-lg-3 mx-auto">
        <tr>
          <td class="table-secondary">送料</td>
          <td>800</td>
        </tr>
        <tr>
          <td class="table-secondary">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-secondary">請求金額</td>
          <td><%= (@total + 800).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="col-lg-6 ml-5 mt-4">
      <div class="row mb-3">
        <h4 class="pr-3 font-weight-bold">支払方法</h4>
        <%= @order.payment_method_i18n %>
      </div>
      <div class="row">
        <h4 class="pr-3 font-weight-bold">お届け先</h4>
        <%= "〒" + @order.postal_code %>
        <%= @order.address %><br>
        <%= @order.name %>
      </div>
    </div>

    <div class="text-center mt-5">
      <%= link_to "注文を確定する", completion_order_path, class: "btn btn-success" %>
    </div>

</div>