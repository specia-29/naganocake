<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <h2>注文履歴一覧</h2>

      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%#= (800 + order.total_payment).to_s(:delimited) %></td>
              <td><%= order.status %></td>
              <td><%= link_to "表示する", show_order_path(order), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>