<div class="col-xs-2 mx-auto">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th class="active text-center"><h5 class="genre_said">ジャンル検索</h5></th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td class="underline">
              <%= link_to genre.name, items_path(genre.id), class: 'text-dark' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>