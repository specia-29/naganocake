<!--addresses_path-->

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="mt-3 mb-4">配送先登録/一覧</h2>
        <%= form_with model: @address, url: addresses_path do |f| %>
        <div class="row">
          <label class="col-lg-4">郵便番号(ハイフンなし)</label>
          <div class="col-lg-3">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",  placeholder: "0000000" %>
          </div>
        </div><br>
        <div class="row">
          <label class="col-lg-4">住所</label>
          <div class="col-lg-3">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60,  placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>
        </div><br>
        <div class="row">
          <label class="col-lg-4">宛名</label>
          <div class="col-lg-3">
            <%= f.text_field :name, autofocus: true, autocomplete: "name",  placeholder: "令和道子" %>
          </div>
          <div class="col-lg-3"></div>
          <div class="col-lg-1">
          <%= f.submit "新規登録", class: 'btn btn-success w-350' %>
          </div>
        </div><br>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
      <table class="table table-bordered border-secondary">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
                <%= link_to "削除する", destroy_address_path(address.id), method: :delete,class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %>
              </td>
              <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>