<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ジャンル一覧・追加</h2>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <h4>ジャンル名</h4>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%#= genre.submit '編集する', class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>