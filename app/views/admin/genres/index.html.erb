<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <h3 class="ml-4 mt-3 mb-5">ジャンル一覧・追加</h3>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="d-flex mb-5">
        <p class="mb-0 pt-2">ジャンル名</p>
        <%= f.text_field :name, class: "ml-4 mr-4" %>
        <%= f.submit '新規登録', class: "btn btn-success btn-lg w-15" %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-4">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>