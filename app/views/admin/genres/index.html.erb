<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>ジャンル一覧・追加</h2>

      <%= form_with model: @genre do |f| %>
        <h4>ジャンル名</h4>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <%= genre.submit '編集する', class: "btn btn-success" %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
