<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品新規登録</h2>

        <%= form_with model: @item, url: admin_items_path do |f| %>
            <div class="form-group">
              <label for="item_name">商品画像</label>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
            <div class="form-group">
              <label for="item_name">商品名</label>
              <%= f.text_field :name, class: "form-control item_name" %>
            </div>
            <div class="form-group">
              <label for="item_introduction">商品説明</label>
              <%= f.text_area :introduction, class: "form-control item_introduction" %>
            </div>
            <div class="form-group">
              <label for="item_genre_id">ジャンル</label>
              <%= f.collection_select :genre_id, @items.all, :genre_id, @items.all, include_blank: "--選択してください--" %>
              <%#= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>
            </div>
            <div class="form-group">
              <label for="item_price">税抜価格</label>
              <%= f.text_field :price, class: "form-control item_price" %>円
            </div>
            <div class="form-group">
              <label for="item_is_active">販売ステータス</label>
              <%= f.text_area :item_is_active, class: "form-control item_is_active" %>
            </div>
            <div class="form-group">
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
  </div>
</div>