<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品新規登録</h2>

        <%= form_with model: @item, url: admin_items_path do |f| %>

            <div class="form-group">
              <label for="item_name">商品画像</label>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
            <div class="form-group">
              <label for="item_name">商品名</label>
              <%= f.text_field :name, class: "form-control item_name" %>
            </div>
            <div class="form-group">
              <label for="item_introduction">商品説明</label>
              <%= f.text_area :introduction, class: "form-control item_introduction" %>
            </div>
            <div class="form-group">
              <label for="item_genre_id">ジャンル</label>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
            </div>
            <div class="form-group">
              <label for="item_price">税抜価格</label>
              <%= f.text_field :price, class: "form-control item_price" %>円
            </div>
            <div class="form-group">
              <label for="item_is_active">販売ステータス</label>
                <div class="is_active">
                  <div>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, '販売中', value: true %>
                  </div>
                  <div>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, '販売停止中', value: false %>
                  </div>
                </div>
            </div>
            <div class="form-group">
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
  </div>
</div>