<div class="container">
  <div class="row">
    <div class="col-xl-12 mt-4 mb-5 ml-5">
      <h3>商品詳細</h3>
    </div>
    <div class="col-lg-4 pr-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
    </div>

    <div class="col-lg-6">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格<br>(税抜価格)</td>
                <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td>
                  <% if @item.is_active == false %>
                    <p class="text-success font-weight-bold mb-0">販売中</p>
                  <% else %>
                    <p class="text-secondary font-weight-bold mb-0">販売停止中</p>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="text-center">
            <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success btn-lg w-25' %>
          </div>
      </div>
  </div>
</div>