<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品詳細</h2>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
          <table class="table">
            <tbody>
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格<br>(税抜価格)</td>
                <td><%= @item.price %></td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td>
                  <% if @item.is_active == false %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>