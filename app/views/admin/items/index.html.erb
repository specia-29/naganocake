<div class="container">
  <div class="row">
    <div class="col-xl-12">

    <div class="row">
      <div class="col-lg-10 pl-3 mt-3 mb-3">
        <h3>商品一覧</h3>
      </div>
      <div class="col-lg-2  mt-3 mb-3 text-right">
          <%= link_to new_admin_item_path class:"btn btn-lg btn-primary" do %>
          <i class="fas fa-plus-circle fa-2x"></i>
          <% end %>
      </div>
    </div>

      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to item.name, admin_item_path(item.id) %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name%></td>
              <td><% if item.is_active == false %>
              <p class="text-success font-weight-bold mb-0">販売中</p>
              <% else %>
              <p class="text-secondary font-weight-bold mb-0">販売停止中</p>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>