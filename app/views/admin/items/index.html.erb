<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品一覧</h2>

  <div class="text-right">
      <%= link_to new_admin_item_path class:"btn btn-lg btn-primary" do %>
      <!--↑↑リンク追加↑↑-->
      <i class="fal fa-plus-circle" aria-hidden="true"></i>
      <% end %>
  </div>

      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active %></td>
              <!--if文で条件分岐-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>