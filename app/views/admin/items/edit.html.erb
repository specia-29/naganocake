<div class="container">
  <div class="row">
    <div class="col-xl-12 ml-5 mt-3 mb-4">
      <h2>商品編集</h2>
    </div>
  </div>

    <div class="col-xl-7 mx-auto">
        <%= form_with model: @item, url: admin_item_path do |f| %>

            <div class="d-flex mb-2">
              <div class="col-lg-3">
                <label for="item_name">商品画像</label>
              </div>
              <%= f.file_field :image, accept: "image/*" %>
            </div>

            <div class="d-flex mb-2">
              <div class="col-lg-3">
                <label for="item_name">商品名</label>
              </div>
              <%= f.text_field :name, class: "form-control item_name",  placeholder: "商品名" %>
            </div>

            <div class="d-flex mb-2">
              <div class="col-lg-3">
                <label for="item_introduction">商品説明</label>
              </div>
              <%= f.text_area :introduction, class: "form-control item_introduction",  placeholder: "ここに説明文を記述します" %>
            </div>

            <div class="d-flex mb-2">
              <div class="col-lg-3">
                <label for="item_genre_id">ジャンル</label>
              </div>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
            </div>

            <div class="d-flex mb-2">
              <div class="col-lg-3">
                <label for="item_price">税抜価格</label>
              </div>
              <%= f.text_field :price, class: "form-control item_price",  placeholder: "1000" %>円
            </div>

            <div class="d-flex mb-3">
              <div class="col-lg-3">
                <label for="item_is_active">販売ステータス</label>
              </div>
                <div class="is_active d-flex">
                  <div class="mr-4">
                    <%= f.radio_button :is_active, false, {:checked => true} %>
                    <%= f.label :is_active, '販売中', value: false %>
                  </div>
                  <div>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, '販売停止中', value: true %>
                  </div>
                </div>
            </div>
            <div class="form-group text-center">
              <%= f.submit '変更を保存', class: "btn btn-success btn-lg w-25" %>
            </div>
        <% end %>
  </div>
</div>