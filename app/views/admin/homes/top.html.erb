<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>注文履歴一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order.id), order.created_at %></td>
              <td><%= order.last_name + "　" + order.first_name %></td>
              <td><%= order.amount %></td>
              <td>
                <% if order.making_status == 0 %>
                  入金待ち
                <% else if order.making_status == 1 %>
                  入金確認
                <% else if order.making_status == 2 %>
                  製作中
                <% else if order.making_status == 3 %>
                  発送準備中
                <% else %>
                　発送済み
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>