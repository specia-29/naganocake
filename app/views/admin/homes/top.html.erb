<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <h2>注文履歴一覧</h2>

      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
              </td>
              <td><%= order.name %></td>
              <td>
                <% amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% amount += order_detail.amount %>
                <% end %>
                <%= amount %>
              </td>
              <td>
                <% if order.status == 0 %>
                  入金待ち
                <% elsif order.status == 1 %>
                  入金確認
                <% elsif order.status == 2 %>
                  製作中
                <% elsif order.status == 3 %>
                  発送準備中
                <% else %>
                　発送済み
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>