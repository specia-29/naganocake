<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>

      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group">
          <label for="customer_id">会員ID</label>
          <%= f.text_field :id, class: "form-control customer_id" %>
        </div>
        <div class="form-group">
          <label for="customer_name">氏名</label>
          <%= f.text_field :last_name, class: "form-control last_name" %>
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
        <div class="form-group">
          <label for="customer_name_kana">氏名</label>
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
        </div>
        <div class="form-group">
          <label for="customer_postal_code">郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control customer_postal_code" %>
        </div>
        <div class="form-group">
          <label for="customer_address">住所</label>
          <%= f.text_area :address, class: "form-control customer_address" %>
        </div>
        <div class="form-group">
          <label for="customer_telephone_number">電話番号</label>
          <%= f.text_field :telephone_number, class: "form-control customer_telephone_number" %>
        </div>
        <div class="form-group">
          <label for="customer_email">電話番号</label>
          <%= f.text_field :email, class: "form-control customer_email" %>
        </div>
        <div class="form-group">
          <label for="item_is_active">会員ステータス</label>
            <div class="is_active">
              <div>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, '有効', value: false %>
              </div>
              <div>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会', value: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit '変更を保存', class: "btn btn-success" %>
            </div>
      <% end %>
    </div>
  </div>
</div>